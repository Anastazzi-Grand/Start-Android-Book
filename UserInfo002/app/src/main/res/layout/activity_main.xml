<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#ABCDEF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:background="#000000"
        android:gravity="center"
        android:padding="10dp"
        android:text="Enter information, please"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#555666"
        android:columnCount="2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="#f9ec7d"
            android:text="Name and surname:"
            android:textColor="#ff0000" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:layout_margin="15dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="#f9ec7d"
            android:text="Phone number:"
            android:textColor="#ff0000" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:layout_margin="15dp"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="#f9ec7d"
            android:text="Your e-mail:"
            android:textColor="#ff0000" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:layout_margin="15dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="#f9ec7d"
            android:text="DOB:"
            android:textColor="#ff0000" />

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_margin="12dp"
            android:background="#AAAFFF"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:textColor="#000000"
                android:text=" / " />

            <EditText
                android:id="@+id/editTextDate2"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:textColor="#000000"
                android:text=" / " />

            <EditText
                android:id="@+id/editTextDate3"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:inputType="number" />
        </LinearLayout>
    </GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Click to enter data" />
</LinearLayout>
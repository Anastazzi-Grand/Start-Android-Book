<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEFF96"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Array of strings"
        android:textColor="#8D57ED"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FD7A7A"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv0"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="1"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="2"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="3"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="4"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="5"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="6"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="7"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="8"
            android:padding="5dp"
            android:textColor="#0E0E0E" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="9"
            android:padding="5dp"
            android:textColor="#0E0E0E" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FFD65C"
        android:gravity="center"
        android:text="Enter the word you want to put into the array"
        android:textColor="#6C5CFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFD65C"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter here"
            android:inputType="textPersonName"
            android:padding="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:onClick="putString"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:text="Click!"
        android:textAllCaps="false"
        android:textColor="#E91E1E" />

</LinearLayout>
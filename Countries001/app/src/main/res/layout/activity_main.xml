<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:onClick="goPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country1" />

        <Button
            android:id="@+id/button2"
            android:onClick="goPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country2" />

        <Button
            android:id="@+id/button3"
            android:onClick="goPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country3" />

        <Button
            android:id="@+id/button4"
            android:onClick="goPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country4" />

        <Button
            android:id="@+id/button5"
            android:onClick="goPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country5" />

        <Button
            android:id="@+id/button6"
            android:onClick="goPict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/country6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/ivEmbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/randomnumbers"
    android:adjustViewBounds="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="While no value"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRandNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="newNumber"
        android:text="Random number (1-9)"
        android:textColor="#3F51B5"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnRandNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="newNumber"
        android:text="Random number (10-99)"
        android:textColor="#3F51B5"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnRandNumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="newNumber"
        android:text="Random number (100-999)"
        android:textColor="#3F51B5"
        android:textStyle="bold|italic" />

</LinearLayout>
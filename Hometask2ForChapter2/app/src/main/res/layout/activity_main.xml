<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFC107"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvRandom10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_number_10_99"
        android:textColor="#EF0B0B"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRandom100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/random_number_100_999"
        android:textColor="#3F51B5"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sumOfNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/sum_of_2_numbers_0"
        android:textColor="#00BCD4"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="onClick"
        android:text="@string/click_me" />

</LinearLayout>